@*
    This is for looking at all quadrants.
*@
@{
    ViewData["Title"] = "View Tasks";
}

@model List<TaskForm>

<h1 class="text-center">Quadrants</h1>
<br />

<div class="line">
    <div class="col-md-6 quad" style="background-color:lightskyblue;">
        <h3>Quadrant 1</h3>
        <table class="table table-bordered table-striped">
            <thead class="font-weight-bold">
                <tr>
                    <td>Task</td>
                    <td>Due Date</td>
                    <td>Category</td>
                    <td>Complete?</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var x in Model)
                {
                    if (x.Quadrant == 1)
                        {

                            <tr>
                                <td>@x.TaskName</td>
                                <td>@x.DueDate</td>
                                <td>@x.Category.CategoryName</td>
                                <td>@x.Completed</td>

                                <td><a asp-controller="Home" asp-action="EditTask" asp-route-id="@x.TaskId">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-id="@x.TaskId">Delete</a></td>
                            </tr>

                        }
                }
            </tbody>
        </table>
    </div>
